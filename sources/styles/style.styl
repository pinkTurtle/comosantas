div#wrap
  height: 100%
  position: relative
div#main.loading
  min-height: 200px
  background: url(images/bg-white.jpg) repeat-y right
  &:after
    content: ''
    background: url('images/ajax-loader.gif') no-repeat center center
    width:55px
    height:55px
    margin: 60px auto 0
    display: block

body.cs_page
  div#cs_page
    background-image: url('images/moles_01_bg_tile.jpg')
    background-repeat: repeat
    color: red
    height: 100%
    div.cs_logo
      width: 100px
      height: 160px
      background-image: url('images/sprite.png')
      background-position: -99px -2px
      position: absolute
      top: 0px
      left: 40px
    div.splash
      background-image: url('images/somos_como_santas.png')
      height: 728px
      width: 682px
      position: absolute
      top: 50%
      margin-top: -364px
      left: 50%
      margin-left: -341px

